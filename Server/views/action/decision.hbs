

<div class="container" >
    <div class="row mt-5 mb-2" style="min-height: 300px;">
        {{#if current}}
        <div class="col rounded border border-secondary ml-3 mr-3 pb-3">
            
            <p class="pt-3">
                Konstgräsplan: {{current.id}} <br>
                Datum: {{current.today}} <br>
                Antal bokningar: 10
            </p>
            
            <a href="/action/clear/{{current.id}}" class="btn btn-warning">Skotta planen</a>
            <a href="/action/close/{{current.id}}" class="btn btn-danger">Stäng planen</a>
            
        </div>
        <div class="col rounded border border-secondary ml-3 mr-3 pb-3"> 
            <div class="row">
                <div class="col">
                    <p class="pt-3">
                        {{current.oneDay}}
                    </p>
                </div>
                <div class="col pt-3">
                    <p>
                        Forecast: {{current.forecast}}
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p class="pt-3">
                        {{current.twoDays}}
                    </p>
                </div>
                <div class="col pt-3">
                    <p>
                        Forecast: {{current.forecast}}
                    </p>
                </div>
            </div>

        </div>
        {{else}}
        DATABASE ERROR!
        {{/if}}
    </div>
</div>

<div class="container">
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
            <th scope="col">#</th>
            <th scope="col">Konstgräsplan</th>
            <th scope="col">Datum</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}            
            <tr onclick="window.location='http://localhost:8000/action/{{id}}';">
            <th scope="row">{{@index}}</th>
            <td>{{id}}</td>
            <td>{{date}}</td>
            </tr>
            {{/each}}

        </tbody>
    </table>
</div>