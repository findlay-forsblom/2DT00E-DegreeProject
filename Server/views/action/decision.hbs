

{{#if current}}
<div class="container" >
    <div class="row mt-5 mb-2" style="min-height: 300px;">
        <div class="col rounded border border-secondary ml-3 mr-3 pb-3">
            <h3 class="pt-3">{{current.id}}</h3>
            <p class="pt-3">
                Datum: {{current.today}} <br>
            </p>
            {{#if bookings}}
            Bokningar:
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                    <th scope="col">Lag</th>
                    <th scope="col">Tid</th>
                    <th scope="col">Kontakt</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each bookings}}         
                    <tr>
                    <th scope="row">{{name}}</th>
                    <td>{{time}}</td>
                    <td>{{contact}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{/if}}
            
            <a href="/action/clear/{{current.id}}/{{current.today}}" class="btn btn-warning">Skotta planen</a>
            <a href="/action/close/{{current.id}}/{{current.today}}" class="btn btn-danger">Stäng planen</a>
            
        </div>
        <div class="col rounded border border-secondary ml-3 mr-3 pb-3"> 
            <h3 class="pt-3">Väderinformation</h3>
            <div class="row">
                <div class="col">
                    <p class="pt-3">
                        {{current.oneDay}}
                    </p>
                </div>
                <div class="col pt-3">
                    <p>
                        Forecast: {{current.forecast}}
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p class="pt-3">
                        {{current.twoDays}}
                    </p>
                </div>
                <div class="col pt-3">
                    <p>
                        Forecast: {{current.forecast}}
                    </p>
                </div>
            </div>

        </div>
    </div>
</div>
{{/if}}

<div class="container">
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
            <th scope="col">#</th>
            <th scope="col">Konstgräsplan</th>
            <th scope="col">Datum</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}            
            <tr onclick="window.location='http://localhost:8000/action/{{id}}';">
            <th scope="row">{{@index}}</th>
            <td>{{id}}</td>
            <td>{{date}}</td>
            </tr>
            {{/each}}

        </tbody>
    </table>
</div>