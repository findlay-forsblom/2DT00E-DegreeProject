<!-- Modal -->
<div class="modal fade" id="closePitch" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Stänga {{current.name}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          {{#if bookings}}
            <form>
                <div class="form-group">
                    <label for="exampleInputEmail1">Titel</label>
                    <input class="form-control" id="title_input" aria-describedby="emailHelp" value="{{current.name}} stängd!">
                </div>
                <div class="form-group">
                    <label for="contact">Email</label>
                    <input type="email" class="form-control" id="email" value="{{#each bookings}}{{#ifAvailable contact 'N/A'}}{{contact}}{{#if @last}}{{else}},{{/if}}{{/ifAvailable}} {{/each}}">
                </div>
                <div class="form-group">
                    <label for="message">Meddelande</label>
                    <textarea class="form-control" id="message" style="height: 200px;">
Tyvärr måste {{current.name}} stängas ({{current.today}}) på grund av snöbeläggning.
Vid frågor, ring telefonnummer.
 
Mvh,
Lasse.
                    </textarea>
                </div>
            </form>
            {{else}}
            Inga bokningar hittade!
            {{/if}}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Avbryt</button>
        <button type="submit" class="btn btn-primary">Skicka mail</button>
      </div>
    </div>
  </div>
</div>